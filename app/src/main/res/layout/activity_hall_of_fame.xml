<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    >

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/HeaderHall"
        layout="@layout/header_hall"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <include
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="16"
            layout="@layout/list_of_winner"
            android:id="@+id/listOfWinners"
            />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="כל הזמנים"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/game_background"
            android:id="@+id/hall_of_fame_all_times"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="חודשי"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/game_background"
            android:id="@+id/hall_of_fame_monthly"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:background="@drawable/trophy"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="חזור"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/game_background"
            android:id="@+id/restartFromList"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:background="@drawable/trophy"/>

    </LinearLayout>



</LinearLayout>
