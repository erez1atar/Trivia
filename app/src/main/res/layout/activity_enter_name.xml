<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:text="הכנס שם לצורך"
        android:id="@+id/enter_name_desc1"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:text="טבלת שיאים"
        android:id="@+id/enter_name_desc2"
        android:textAlignment="center"
        android:gravity="center"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@android:color/black"
        android:maxLength="15"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:textSize="45sp"
        android:background="@drawable/button_correct_style"
        android:id="@+id/enter_name_name"
        android:textAlignment="center"
        android:hint="הכנס שם.."
        android:gravity="center"/>


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="קדימה למשחק"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:background="@drawable/button_result_style"
        android:id="@+id/enter_name_next"
        android:textAlignment="center"
        android:gravity="center"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        />

</LinearLayout>
